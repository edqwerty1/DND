@{
    ViewBag.Title = "CreateSpell";
}

<h2>CreateSpell</h2>

@using (Ajax.BeginForm("CreateSpell", "Spell", new AjaxOptions { UpdateTargetId = "create-spell-partial" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextArea("SpellText", string.Empty, 10, 55, null) 
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

}


<div id="create-spell-partial">

</div>
